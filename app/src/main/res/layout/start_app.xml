<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture_start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/facebook_sign"
        android:id="@+id/text4"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="28dp"
        android:contentDescription="Title" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text0">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/log_in"
                android:textColor="@color/white"
                android:paddingLeft="30dp"
                android:id="@+id/text2"
                android:clickable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sign_up"
                android:id="@+id/text3"
                android:textColor="@color/white_log"
                android:singleLine="false"
                android:paddingLeft="100dp"
                android:clickable="true"
                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="@string/user_name"
            android:ems="12"
            android:id="@+id/edittext0"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_bar"
            android:textAlignment="inherit"
            android:paddingLeft="8dp" />
        <EditText
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:ems="16"
            android:id="@+id/edittext1"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bar"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:textAlignment="inherit"
            android:paddingLeft="8dp"
            android:visibility="visible"/>
        <EditText
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="16"
            android:id="@+id/edittext2"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bar"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:textAlignment="inherit"
            android:paddingLeft="8dp"
            android:visibility="gone" />
        <EditText
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="16"
            android:id="@+id/edittext3"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bar"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:textAlignment="inherit"
            android:paddingLeft="8dp"
            android:visibility="gone"/>
        <EditText
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="16"
            android:id="@+id/edittext4"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bar"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:textAlignment="inherit"
            android:paddingLeft="8dp"
            android:visibility="gone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:id="@+id/button0"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/text0"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"/>

    <ImageView
        android:layout_width="253dp"
        android:layout_height="2dp"
        android:id="@+id/imageView2"
        android:background="@drawable/white_bar_facebook"
        android:layout_above="@+id/text4"
        android:layout_centerHorizontal="true"
        android:contentDescription="Log_in_facebook" />


</RelativeLayout>