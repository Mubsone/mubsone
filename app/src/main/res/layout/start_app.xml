    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mubsoneHomeHeader">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:id="@+id/singupTextView"
                android:clickable="false"
                android:gravity="center"
                android:paddingRight="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/log_in"
                android:textColor="@color/white_log"
                android:id="@+id/loginTextView"
                android:clickable="false"
                android:gravity="center"
                android:paddingLeft="70dp"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="@string/user_name"
            android:ems="12"
            android:id="@+id/usernameLoginPageEditText"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_bar"
            android:textAlignment="inherit"
            android:paddingLeft="8dp" />
        <EditText
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:ems="16"
            android:id="@+id/passwordLoginPageEditText"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bar"
            android:textColorHint="@color/white_log"
            android:textColor="@color/black"
            android:textAlignment="inherit"
            android:paddingLeft="8dp"
            android:visibility="visible"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:id="@+id/loginHomeButton"
            android:layout_gravity="center_horizontal"
            android:onClick="loginHomeButtonCallback"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/mubsoneHomeHeader"
        android:textColor="@color/white"
        android:textSize="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />



    <ImageView
        android:layout_width="253dp"
        android:layout_height="2dp"
        android:id="@+id/imageView2"
        android:background="@drawable/white_bar_facebook"
        android:foregroundGravity="center"
        android:layout_marginBottom="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/facebook_sign"
        android:textColor="@color/white"
        android:id="@+id/facebookTextView"
        android:clickable="false"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>