<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/toolbar_of_profile"
    tools:context=".Profile">


    <GridView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:id="@+id/gridViewProfile"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:columnWidth="100dp"
        android:stretchMode="columnWidth"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/numberOfVideosIcon"
        android:src="@mipmap/ic_number_of_videos"
        android:layout_alignBottom="@+id/numberOfVideosText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="69"
        android:id="@+id/numberOfVideosText"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/contestsWonIcon"
        android:src="@mipmap/ic_contests_won"
        android:layout_alignTop="@+id/numberOfVideosIcon"
        android:layout_toRightOf="@+id/numberOfVideosIcon"
        android:layout_toEndOf="@+id/numberOfVideosIcon"
        android:layout_marginTop="24.5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5"
        android:id="@+id/contestsWonText"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="102dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/fansIcon"
        android:src="@mipmap/ic_fans"
        android:layout_marginRight="101dp"
        android:layout_marginEnd="101dp"
        android:layout_alignTop="@+id/contestsWonIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageRatesIcon"
        android:src="@mipmap/ic_start_full"
        android:layout_alignBottom="@+id/fansIcon"
        android:layout_toRightOf="@+id/fansText"
        android:layout_toEndOf="@+id/fansText"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="456"
        android:id="@+id/fansText"
        android:layout_below="@+id/fansIcon"
        android:layout_alignLeft="@+id/fansIcon"
        android:layout_alignStart="@+id/fansIcon"
        android:layout_marginTop="0.5dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="4.5"
        android:id="@+id/ratesTextProfile"
        android:textColor="@color/black"
        android:layout_below="@+id/averageRatesIcon"
        android:layout_alignLeft="@+id/averageRatesIcon"
        android:layout_alignStart="@+id/averageRatesIcon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/becomeAFan"
        android:src="@mipmap/ic_become_a_fan"
        android:layout_below="@+id/contestsWonText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/separatorProfile"
        android:src="@drawable/separator"
        android:layout_alignBottom="@+id/becomeAFan"
        android:layout_alignLeft="@+id/numberOfVideosIcon"
        android:layout_alignStart="@+id/numberOfVideosIcon"
        android:layout_marginBottom="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Brajansaraci"
        android:id="@+id/usernameTextProfile"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/becomeAFan"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/profilePictureInProfile"
        android:src="@mipmap/ic_profile_picture"
        android:layout_alignBottom="@+id/contestsWonText"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="19, Lyon Love to make music covers"
        android:id="@+id/descriptionProfile"
        android:textColor="@color/black"
        android:singleLine="false"
        android:maxWidth="150dp"
        android:textSize="11dp"
        android:layout_alignTop="@+id/separatorProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"/>

</RelativeLayout>
